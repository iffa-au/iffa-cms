{
  "name": "iffa-cms",
  "description": "The root folder for frontend and backend for IFFA HUB CMS",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "backend:install": "npm --prefix backend install",
    "dev:backend": "npm --prefix backend run dev",
    "build:backend": "npm --prefix backend run build",
    "start:backend": "npm --prefix backend run start",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "docker:init": "docker compose up -d",
    "db:push": "npm --prefix backend run db:push"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
